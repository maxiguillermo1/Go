<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.go">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="Go! Learn Nihongo! On the Go!"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Go"
        tools:targetApi="31" >

        <activity android:name=".MainActivity" android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".MenuActivity" android:exported="true" />
        <activity android:name=".HiraganaActivity" android:exported="true" />
        <activity android:name=".KatakanaActivity" android:exported="true" />
        <activity android:name=".QuizStartingActivity" android:exported="true" />
        <activity android:name=".QuizActivity" android:exported="true" />
        <activity android:name=".GuideActivity" android:exported="true" />

    </application>

</manifest>
